#include ".colors/base16-default.dark.xresources"

! transparent background
urxvt*background: #20202f

! make ctrl-tab & ctrl-shift-tab work
URxvt.keysym.Control-Tab: \033[27;5;9~
URxvt.keysym.Control-Shift-ISO_Left_Tab: \033[27;6;9~
URxvt.iso14755: False
URxvt.iso14755_52: False

! resize fonts
urxvt.perl-ext-common: font-size
urxvt.font-size.step: 2
urxvt.keysym.C-Up:      perl:font-size:increase
urxvt.keysym.C-Down:    perl:font-size:decrease

*scrollBar: false
*font: $font
*boldFont: $font
*urgentOnBell: false
*borderless: 1

Xcursor.theme: Human
Xcursor.size: 48
!Xcursor.theme: whiteglass
!Xcursor.size: 12

!colors:
!A tango-esque light theme
!*foreground: #A0A0A0
urxvt*depth: 32

!*shading: 10
!*transparent: true
!*inheritPixmap: true
urxvt*foreground: $active_fg

*color0:  #2E3436
