#include ".colors/base16-default.dark.xresources"

! transparent background
urxvt*background: rgba:1000/1000/1000/d000

! make ctrl-tab & ctrl-shift-tab work
URxvt.keysym.Control-Tab: \033[27;5;9~
URxvt.keysym.Control-Shift-ISO_Left_Tab: \033[27;6;9~
URxvt.iso14755: False
URxvt.iso14755_52: False

! resize fonts
urxvt.perl-ext-common: font-size
urxvt.font-size.step: 2
urxvt.keysym.C-Up:      perl:font-size:increase
urxvt.keysym.C-Down:    perl:font-size:decrease

*scrollBar: false
!use powerline font as secondary
!*font: xft:Terminus:Regular:pixelsize=12:antialias=false:hinting=false:autohint=false, xft:Terminus (TTF) for Powerline:pixelsize=16:antialias=false:hinting=false:autohint=false
!*font: xft:Droid Sans Mono:pixelsize=14:hinting=true:autohint=true, xft:PowerlineSymbols:pixelsize=14
*font: xft:Droid Sans mono:pixelsize=16:antialias=true
!, xft:PowerlineSymbols:pixelsize=14
!*font: xft:Menlo for Powerline:pixelsize=16:hinting=true:autohint=true
*urgentOnBell: true
*borderless: 1

!*perl-ext-common:  	default,url-select
!*keysym.M-u:			perl:url-select:select_next
!*url-select.launcher:	/usr/bin/firefox
!*url-select.underline: true

Xcursor.theme: Human
Xcursor.size: 48
!Xcursor.theme: whiteglass
!Xcursor.size: 12

!colors:
!A tango-esque light theme
!*foreground: #A0A0A0
urxvt*depth: 32

!*shading: 10
!*transparent: true
!*inheritPixmap: true
