#
# bspwm hotkeys
#

super + alt + Escape
	bspc query -T > "$BSPWM_TREE"; \
		bspc query -H > "$BSPWM_HISTORY"; \
			bspc quit

super + w
    bspc window -c

super + t
    bspc desktop -l next

super + b
    bspc desktop -B

super + {s,f}
    bspc window -t {floating,fullscreen}

super + {grave,Tab}
    bspc {window,desktop} -f last

super + apostrophe
    bspc window -s last

super + {o,i}
    bspc control --record-history off; \
    bspc window {older,newer} -f; \
    bspc control --record-history on

super + y
    bspc window -w last.manual

super + m
    bspc window -s biggest

super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
    bspc window -f {next,prev}

#super + {comma,period}
#    bspc desktop -C {backward,forward}

super + bracket{left,right}
    bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
    bspc window -e {left,down,up,right} push

super + alt + shift + {h,j,k,l}
    bspc window -e {right,up,down,left} pull

super + ctrl + {1-9}
    bspc window -r 0.{1-9}

super + {1-9,0}
	desk=$(~/bin/bspwm_getdesk.sh {1-9,10}); \
	bspc desktop -f $desk

super + shift + {1-9,0}
	desk=$(~/bin/bspwm_getdesk.sh {1-9,10}); \
	bspc window -d $desk

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

super + {comma,period}
	bspc monitor -f {prev,next}

super + shift + {comma,period}
	desktops=( $(bspc query -D -m) ); \
	desk=$(bspc query -D -d focused); \
	if [[ ${#desktops[@]} -eq 1 ]]; then; \
		bspc monitor -f {prev, next}; \
		bspc desktop focused -m {next, prev}; \
		bspc desktop $desk -m focused; \
		bspc monitor -f {next, prev}; \
		bspc monitor -o $(bspc query -D -m | sort -n); \
		bspc monitor -f {prev, next}; \
		bspc monitor -o $(bspc query -D -m | sort -n); \
		bspc desktop -f $desk; \
	else; \
		bspc desktop focused -m {prev,next}; \
		bspc desktop -f $desk; \
		bspc monitor -o $(bspc query -D -m | sort -n); \
	fi

super + r
	bspc desktop focused -R 90

super + shift + r
	bspc desktop focused -R 270

#
# wm independent hotkeys
#

super + Return
    urxvt

super + space
    dmenu_run

# make sxhkd reload its configuration files:

XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ -- +2%; \
	paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -- -2%; \
	paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle; \
	paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
XF86MonBrightnessUp
	sudo /usr/bin/brightness.sh mon \*2
XF86MonBrightnessDown
	sudo /usr/bin/brightness.sh mon /2
XF86KbdBrightnessUp
	sudo /usr/bin/brightness.sh kbd +50
XF86KbdBrightnessDown
	sudo /usr/bin/brightness.sh kbd -50
XF86LaunchA
	touchpadtoggle
super + shift + x
	/usr/bin/i3lock -u -c 5AAE24
XF86AudioPlay
	/usr/bin/ncmpcpp toggle
XF86AudioStop
	/usr/bin/ncmpcpp stop
XF86AudioPrev
	/usr/bin/ncmpcpp prev
XF86AudioNext
	/usr/bin/ncmpcpp next

