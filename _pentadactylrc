loadplugins '\.(js|penta)$'
group user

" faster navigation
map -modes=n,v j -builtin 10j
map -modes=n,v k -builtin 10k
map -modes=n,v <C-j> -builtin 30j
map -modes=n,v <C-k> -builtin 30k
map -modes=n,v h -builtin 10h
map -modes=n,v l -builtin 10l
map -modes=n,v <C-h> -builtin 30h
map -modes=n,v <C-l> -builtin 30l

set defsearch=google

" disable scrollbars
set guioptions=Cs

" bigger hints
hi -a Hint font-size: 12pt !important

" dark colorscheme
colorscheme simple_dark

"highlight -a Hint text-transform: uppercase
" vim: set ft=pentadactyl:
